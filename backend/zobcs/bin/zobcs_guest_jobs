#!/usr/bin/python
from __future__ import print_function
from zobcs.readconf import get_conf_settings
from zobcs.ConnectionManager import NewConnection
from zobcs.sqlquerys import add_zobcs_logs, get_config_id
from zobcs.check_setup import check_configure_guest
from zobcs.build_job import build_job_action
from zobcs.jobs import jobs_main
from sqlalchemy.orm import sessionmaker
import portage
import sys
import os
import time
from multiprocessing import Process

def main():
	repeat = True
	reader = get_conf_settings()
	zobcs_settings_dict=reader.read_zobcs_settings_all()
	config = zobcs_settings_dict['zobcs_config']
	hostname = zobcs_settings_dict['hostname']
	Session = sessionmaker(bind=NewConnection(zobcs_settings_dict))
	session = Session()
	config_id = get_config_id(session, config, hostname)
	add_zobcs_logs(session, "Job and build deamon started.", "info", config_id)
	init_build_job = build_job_action(session, config_id)
	while repeat:
		jobs_main(session, config)
		if check_configure_guest(session, config_id) is not True:
			time.sleep(10)
			continue
		else:
			init_build_job.procces_build_jobs()
			#p = Process(target=init_build_job.procces_build_jobs,)
			#p.start()
			#p.join()
			time.sleep(30)
			repeat = True
	conn.close

if __name__ == "__main__":
  main()
